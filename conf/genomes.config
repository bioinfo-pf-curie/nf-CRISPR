/*
 * -------------------------------------------------
 *  Nextflow config file for iGenomes paths
 * -------------------------------------------------
 * Defines reference genomes, using iGenome paths
 * Can be used by any config that customises the base
 * path using $params.igenomes_base / --igenomes_base
 */

params {

  //Define where the annotation are available
  igenomes_base = '/data/annotations/pipelines/'

  genomes {
    'hg38' {
      fasta   = "${params.igenomes_base}/Human/hg38/genome/hg38.fa"
    }
    'hg19' {
      fasta   = "${params.igenomes_base}/Human/hg19/genome/hg19.fa"
    }
  }

  library {
    'sabatiniPositive' {
      design = "assets/0096_grnas_ngs_reads_sabatini_positive_screen_mouse_NoUnmapped_NoMultihits_NonRedundant.csv"
    }
    'sabatiniNegative' {
      design = "assets/0095_grnas_ngs_reads_sabatini_negative_screen_human_NoUnmapped_NoMultihits_NonRedundant.csv"
    }
    'weissman' {
      design = "assets/hcrispri-v2-guides-weissman_NoUnmapped_NoMultihits_NonRedundant.csv"
    }
    'humanGeCKOv2' {
      design = "assets/Human_GeCKOv2_Library_combine_NoUnmapped_NoMultihits_NonRedundant.csv"
    }
    'mouseGeCKOv2' {
      design = "assets/Mouse_GeCKOv2_Library_combine_NoUnmapped_NoMultihits_NonRedundant.csv"
    }
  }

#assets/hcrispri-v2-guides-weissman_NoUnmapped_NoMultihits_NonRedundant.csv
#assets/190730_Library_CRISPRi_Weissman_Top5_NoUnmapped_NoMultihits_NonRedundant.csv
#assets/191003-FRE-customlib-Gecko-Sg_custom_library_NoUnmapped_NoMultihits_NonRedundant.csv

}
