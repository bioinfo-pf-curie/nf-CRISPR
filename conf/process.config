
process {


  cpus = { checkMax( 2, 'cpus' ) }
  memory = { checkMax( 4.GB * task.attempt, 'memory' ) }
  time = { checkMax( 2.h * task.attempt, 'time' ) }

  //errorStrategy = { task.exitStatus in [143,137,104,134,139] ? 'retry' : 'finish' }
  errorStrategy = 'retry' 
  maxRetries = 1
  maxErrors = '-1'

  withLabel: lowCpu { cpus = 1 }
  withLabel: medCpu { cpus = 4 }
  withLabel: highCpu { cpus = 8 }
  withLabel: lowMem { memory = '2 GB' }
  withLabel: medMem { memory = '12 GB' }
  withLabel: highMem { memory = '40 GB' }

}

